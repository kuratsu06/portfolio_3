<div class="complete_comment">
  <% @complete.comments.order(created_at: :desc).each do |comment| %>
    <div class="comment_box">
      <div class="user_img">
        <% if comment.user.image? %>
          <%= image_tag comment.user.image.url, size: '40x40' %>
        <% else %>
          <%= image_tag "user.png", size: '40x40' %>
        <% end %>
      </div>
      <div class="comment_content">
        <%= comment.user.name %><span class="content"><%= comment.content %></span>
        <p class="time_ago"><%= time_ago_in_words(comment.created_at)+ "前" %></p>
        <% if current_user.id == comment.user_id %>
          <%= button_to "削除", comments_path(id: comment.id), method: :delete %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
