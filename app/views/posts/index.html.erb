<p style="color: green"><%= notice %></p>

<div class="top_page">
  <% @posts.each do |post| %>
    <div class="top_img">
      <%= link_to post_path(post) do %>
        <% if post.image? %>
          <%= image_tag post.image.thumb_2.url %>
        <% else %>
          <p class="no_img">no image</p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
